doctype 5
html(lang="en" ng-app="vimeoApp")
	head
		// Core inclusion
		link(rel='stylesheet', href='/core/css/style.css')
		script(src="/core/js/jquery-1.8.2.min.js")
		script(src="/core/js/socket.io.min.js")
		script(src="/core/js/jquery.mcjs.core.js")
		script(src="/mediacenterjs-vimeo/public/js/vendor/angular.min.js")
		script(src="/mediacenterjs-vimeo/public/js/vendor/angular-route.min.js")
		//Vimeo App stuff
		script(src="/mediacenterjs-vimeo/public/js/app.js")
		script(src="/mediacenterjs-vimeo/public/js/directives/directives.js")
		script(src="/mediacenterjs-vimeo/public/js/filters/filters.js")
		
		//controllers
		script(src="/mediacenterjs-vimeo/public/js/controllers/searchController.js")
		script(src="/mediacenterjs-vimeo/public/js/controllers/videoController.js")
		script(src="/mediacenterjs-vimeo/public/js/controllers/categoriesController.js")
		script(src="/mediacenterjs-vimeo/public/js/controllers/channelsController.js")
		script(src="/mediacenterjs-vimeo/public/js/controllers/playerController.js")
		script(src="/mediacenterjs-vimeo/public/js/controllers/subcategoriesController.js")

		//services
		script(src="/mediacenterjs-vimeo/public/js/services/videosService.js")
		script(src="/mediacenterjs-vimeo/public/js/services/channelsService.js")
		script(src="/mediacenterjs-vimeo/public/js/services/categoriesService.js")
		script(src="/mediacenterjs-vimeo/public/js/services/pagerService.js")
		
		//Directives
		//script(src="/mediacenterjs-vimeo/public/js/app.js")
		

		// App specific
		link(rel='stylesheet', href='/mediacenterjs-vimeo/public/css/style.css')
		link(href="/mediacenterjs-vimeo/public/css/bootstrap.min.css" rel="stylesheet")
		
		title vimeo
		
		script.
			$(function(){
				
				$('body').mcjs();
				
			});
	body
		#header
			div.pull-left
				a.backlink(href="/") 
					img(src="/core/icons/back.png")

				h1 vimeo

			form.pull-right(name="searchForm" ng-controller="SearchCtrl")
				div.form-inline
					div.form-group
						input#search.mcjs-rc-controllable(style="width:200px" type="text" placeholder="Search for videos" ng-model="search" required class-)
					div.form-group
						button.btn.btn-default.mcjs-rc-controllable.mcjs-rc-clickable(ng-click="getSearch()") Search


		#wrapper
			ng-view

			

